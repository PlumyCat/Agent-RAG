# =====================================================
# MCP RAG Advanced - Environment Variables
# =====================================================

# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=your_azure_openai_api_key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4-1-mini
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-3-small

# Alternative: Standard OpenAI (if not using Azure)
# OPENAI_API_KEY=your_openai_api_key
# OPENAI_BASE_URL=https://api.openai.com/v1
# OPENAI_MODEL_NAME=gpt-4-1-mini

# PostgreSQL Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=mcp_rag
POSTGRES_USER=mcp_user
POSTGRES_PASSWORD=mcp_password
POSTGRES_SCHEMA=public

# Connection string format (alternative to individual vars)
DATABASE_URL=postgresql://mcp_user:mcp_password@localhost:5432/mcp_rag

# PostgreSQL Connection Pool Settings
POSTGRES_MIN_CONNECTIONS=5
POSTGRES_MAX_CONNECTIONS=20
POSTGRES_CONNECTION_TIMEOUT=30

# Redis Configuration (for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379/0

# Vector Search Configuration
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSION=1536
SIMILARITY_THRESHOLD=0.7
MAX_SEARCH_RESULTS=10

# Document Processing Settings
MAX_FILE_SIZE_MB=200
MEMORY_THRESHOLD_MB=30
CHUNK_SIZE=500
CHUNK_OVERLAP=100
PROCESSING_TIMEOUT_SECONDS=600

# OCR and Image Processing
OCR_LANGUAGE=fra+eng
OCR_DPI_THRESHOLD=300
ENABLE_OCR_PREPROCESSING=true
IMAGE_OCR_ENHANCEMENT_LEVEL=standard

# NLP and Entity Extraction
SPACY_MODEL=fr_core_news_sm
ENABLE_ENTITY_EXTRACTION=true
ENABLE_RELATION_EXTRACTION=true
ENTITY_CONFIDENCE_THRESHOLD=0.8

# Knowledge Graph Settings
ENABLE_KNOWLEDGE_GRAPH=true
MAX_RELATIONSHIP_DEPTH=3
GRAPH_UPDATE_BATCH_SIZE=100

# Caching Settings
ENABLE_SEMANTIC_CACHE=true
CACHE_TTL_HOURS=24
MAX_CACHE_SIZE_MB=500

# API and Performance Settings
API_RATE_LIMIT_RPM=60
EMBEDDING_BATCH_SIZE=100
CONCURRENT_REQUESTS=5

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_THEME_BASE=light

# Development and Debugging
DEBUG=false
LOG_LEVEL=INFO
ENABLE_SQL_LOGGING=false
ENABLE_PERFORMANCE_METRICS=true

# Optional: Integration with existing project
# PROJECT_DB_URL=postgresql://user:pass@host:port/project_db
# USER_TABLE_NAME=users
# ORGANIZATION_TABLE_NAME=organizations